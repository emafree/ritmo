import { VerticalBox, HorizontalBox } from "std-widgets.slint";
import { Theme } from "../theme.slint";
import { ContentWithBooks, BookInfo } from "../types.slint";

export component ContentCard {
    in property <ContentWithBooks> content;

    callback content-clicked(int);
    callback book-clicked(int);

    Rectangle {
        background: #ffffff;
        border-radius: 16px;
        drop-shadow-blur: 8px;
        drop-shadow-color: #00000012;

        VerticalBox {
            padding: 28px;
            spacing: 20px;

            // Content Header
            HorizontalBox {
                spacing: 20px;

                Rectangle {
                    width: 70px;
                    height: 70px;
                    background: Theme.primary-color;
                    border-radius: 12px;

                    Text {
                        text: "üìù";
                        font-size: 36px;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }

                VerticalBox {
                    alignment: start;
                    spacing: 8px;
                    horizontal-stretch: 1;

                    content-title-touch := TouchArea {
                        clicked => {
                            content-clicked(content.id);
                        }

                        Text {
                            text: content.name;
                            font-size: 22px;
                            font-weight: 700;
                            color: content-title-touch.has-hover ? Theme.primary-color : Theme.text-primary;
                            horizontal-alignment: left;
                        }
                    }

                    if content.original_title != "" && content.original_title != content.name : Text {
                        text: content.original_title;
                        font-size: 14px;
                        color: Theme.text-muted;
                        horizontal-alignment: left;
                    }

                    HorizontalBox {
                        spacing: 16px;

                        if content.type_name != "" : Rectangle {
                            height: 26px;
                            background: Theme.primary-color;
                            border-radius: 7px;

                            HorizontalBox {
                                padding-left: 12px;
                                padding-right: 12px;

                                Text {
                                    text: content.type_name;
                                    font-size: 13px;
                                    font-weight: 600;
                                    color: #ffffff;
                                    vertical-alignment: center;
                                }
                            }
                        }

                        if content.publication_date != "" : Text {
                            text: "üìÖ " + content.publication_date;
                            font-size: 14px;
                            color: Theme.text-secondary;
                            vertical-alignment: center;
                        }
                    }

                    // People
                    if content.people.length > 0 : VerticalBox {
                        spacing: 6px;
                        alignment: start;

                        for person in content.people : HorizontalBox {
                            spacing: 8px;

                            Text {
                                text: "‚úçÔ∏è";
                                font-size: 16px;
                                vertical-alignment: center;
                            }

                            Text {
                                text: person.person_name;
                                font-size: 15px;
                                font-weight: 500;
                                color: Theme.text-primary;
                                vertical-alignment: center;
                            }

                            Text {
                                text: "(" + person.role_name + ")";
                                font-size: 14px;
                                color: Theme.text-muted;
                                vertical-alignment: center;
                            }
                        }
                    }
                }
            }

            // Separator
            if content.books.length > 0 : Rectangle {
                height: 2px;
                background: Theme.border-color;
            }

            // Books containing this content
            if content.books.length > 0 : VerticalBox {
                spacing: 16px;

                Text {
                    text: "Presente in (" + content.books.length + " libri)";
                    font-size: 15px;
                    font-weight: 700;
                    color: Theme.text-secondary;
                    horizontal-alignment: left;
                }

                for book in content.books : Rectangle {
                    background: Theme.book-bg;
                    border-radius: 12px;
                    border-width: 2px;
                    border-color: Theme.book-border;

                    VerticalBox {
                        padding: 20px;
                        spacing: 8px;

                        HorizontalBox {
                            spacing: 16px;

                            Rectangle {
                                width: 40px;
                                height: 40px;
                                background: Theme.primary-color;
                                border-radius: 8px;

                                Text {
                                    text: "üìñ";
                                    font-size: 20px;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }

                            VerticalBox {
                                alignment: start;
                                spacing: 6px;
                                horizontal-stretch: 1;

                                book-title-touch := TouchArea {
                                    clicked => {
                                        book-clicked(book.id);
                                    }

                                    Text {
                                        text: book.name;
                                        font-size: 16px;
                                        font-weight: 600;
                                        color: book-title-touch.has-hover ? Theme.primary-color : Theme.text-primary;
                                        horizontal-alignment: left;
                                    }
                                }

                                HorizontalBox {
                                    spacing: 12px;

                                    if book.publisher != "" : Text {
                                        text: "üè¢ " + book.publisher;
                                        font-size: 13px;
                                        color: Theme.text-secondary;
                                    }

                                    if book.format != "" : Text {
                                        text: "üìÑ " + book.format;
                                        font-size: 13px;
                                        color: Theme.text-secondary;
                                    }

                                    if book.publication_date != "" : Text {
                                        text: "üìÖ " + book.publication_date;
                                        font-size: 13px;
                                        color: Theme.text-secondary;
                                    }
                                }
                            }
                        }
                    }
                }
            }

            if content.books.length == 0 : Rectangle {
                height: 50px;
                background: Theme.hover-bg;
                border-radius: 10px;

                Text {
                    text: "Non presente in nessun libro";
                    font-size: 14px;
                    color: Theme.text-muted;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }
        }
    }
}
